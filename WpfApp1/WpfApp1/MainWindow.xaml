<Window x:Class="WpfApp1_Polling.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1_Polling"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel Name ="MyPanel" Margin="10,10,10,10">
        <Menu>
            <MenuItem Header="File">
                <MenuItem Click="OnMenuExit" Header="Exit"/>
            </MenuItem>

            <MenuItem Header="View">
            </MenuItem>

            <MenuItem Header="Help">
            </MenuItem>

        </Menu>

        <Grid Height="250" Width="640">

            <Image Margin="44,263,398,-35" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <Button x:Name="B1" Click="ButtonInit_Click" Content="ButtonInit" HorizontalAlignment="Left" Margin="249,300,0,0" VerticalAlignment="Top" Height="61" Width="96"/>

        </Grid>

    </DockPanel>
</Window>
